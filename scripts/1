set default_proj_name "default_project_name"
if { [llength $argv] == 1 } {
    set proj_name [lindex $argv 0]
} else {
    puts "wrong number of tclargs."
    exit 1
}

# open project
open_project ${CMAKE_BINARY_DIR}/$proj_name/$proj_name.xpr

# 
open_hw
connect_hw_server
open_hw_target
refresh_hw_device -update_hw_probes false [lindex [get_hw_devices xcvu9p_0] 0]
set_property PROGRAM.FILE "${CMAKE_BINARY_DIR}/$proj_name/$proj_name.runs/impl_1/tcp_ip_top.bit" [get_hw_devices xcvu9p_0]
set_property PROBES.FILE "${CMAKE_BINARY_DIR}/$proj_name/$proj_name.runs/impl_1/tcp_ip_top.ltx" [lindex [get_hw_devices] 0]
program_hw_devices [get_hw_devices xcvu9p_0]
refresh_hw_device [lindex [get_hw_devices xcvu9p_0] 0]
